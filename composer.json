{
    "name": "spork/core",
    "description": "The core of Spork",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Austin Kregel",
            "email": "5355937+austinkregel@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/support": ">=8.40",
        "spatie/laravel-query-builder": "^5.0",
        "spatie/laravel-tags": "^4.3"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Spork\\Core\\": "src",
            "Spork\\Core\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spork\\Core\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spork\\Core\\SporkServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "homepage": "https://github.com/spork-app/core",
    "keywords": [
        "spork-plugins"
    ]
}
